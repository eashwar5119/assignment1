<h1>Listing pet_records</h1>

<table>
  <thead>
    <tr>
      
      <th>Pet type</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Date last visit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_records.each do |pet_record| %>
      <tr>
      
        <td><%= pet_record.pet_type %></td>
        <td><%= pet_record.breed %></td>
        <td><%= pet_record.age %></td>
        <td><%= pet_record.weight %></td>
        <td><%= pet_record.date_last_visit %></td>
        <td><%= link_to 'Show', pet_record %></td>
        <td><%= link_to 'Edit', edit_pet_record_path(pet_record) %></td>
        <td><%= link_to 'Destroy', pet_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

